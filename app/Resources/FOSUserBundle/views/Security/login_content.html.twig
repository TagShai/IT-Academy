{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    <!-- Header -->

            <form action="{{ path("fos_user_security_check") }}" method="post">

                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}

                <label for="username">{{ 'имя пользователя'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control"/>

                <br>

                <label for="password">{{ 'пароль'|trans }}</label>
                <input type="password" id="password" name="_password" required="required" class="form-control"/>

                <br>

{#                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                <label for="remember_me">{{ 'remember_me'|trans }}</label>#}

                <br>
                <input type="submit" id="_submit" name="_submit" value="{{ 'Войти'|trans }}" />
            </form>

            {% if error %}
                {#<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>#}
                <div>Неверные имя пользователя или пароль</div>
            {% endif %}

{% endblock %}


