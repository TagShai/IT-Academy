{% endblock %}
{% block javascripts %}
    <script>
        $( document ).ready(function() {
            $("tr").on('click',function( event ) {
                $("#delete").removeClass("hidden");
                $("#edit").removeClass("hidden");
                $("tr").removeClass('active');
                $(this).not("thead tr").addClass('active');
                $("#delete").attr('href','/subjects/delete/'+event.target.parentNode.id);
                $("#edit").attr('href','/subjects/edit/'+event.target.parentNode.id);
                $("#joinCourse").attr('href','/subjects/edit/'+event.target.parentNode.id);
            });
        });
    </script>
{% endblock %}